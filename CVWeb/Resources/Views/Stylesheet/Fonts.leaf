* {
    font-family: 'Montserrat', sans-serif;
}

h1,
h2,
h3 {
    text-transform: uppercase;
    color: var(--text-primary);
    font-weight: bold;
}

h1 {
    font-size: 3rem;
}

h2 {
    font-size: 2.5rem;
}

h3 {
    font-size: 2rem;
}

.subheading {
    font-size: 1.5rem;
    text-transform: uppercase;
    color: var(--text-secondary);
    font-weight: bold;
}

p {
    font-size: 1.15rem;
}
